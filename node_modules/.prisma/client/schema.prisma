generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Profile model - No authentication, simple profile per user ID
model Profile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  pseudo    String?  @default("")
  avatar    String?  @default("ðŸ˜º")
  color     String?  @default("#ffcc00")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Score model - Scores linked to userId (no foreign key, no auth required)
model Score {
  id       Int      @id @default(autoincrement())
  userId   Int?
  username String?
  game     String
  score    Int
  date     DateTime @default(now())
}
